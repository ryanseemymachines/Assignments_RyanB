import { Component } from "react";
import styles from "./index.module.css";

class BlogPost extends Component {
  componentDidMount() {
    console.log(`BlogPost "${this.props.title}" has been mounted`);
  }

  componentDidUpdate(prevProps) {
    if (prevProps.title !== this.props.title) {
      console.log(
        `BlogPost has been updated from "${prevProps.title}" to "${this.props.title}"`
      );
    }
  }

  render() {
    const { title, author, date, content } = this.props;
    const paragraphs = content.split('\n\n').filter(p => p.trim());
    return (
      <div className={styles.blogContainer}>
        <article className={styles.blogPostCard}>
          <h2>{title}</h2>
          <p>
            <strong>By:</strong> <big>{author}</big> | <i>{date}</i>
          </p>
          {paragraphs.map((para, idx) => (
          <p key={idx} className="text-lg leading-relaxed mb-4">
            {para}
          </p>
        ))}

        </article>
      </div>
    );
  }
}

export default BlogPost;


import styles from "./index.module.css";

function BlogHeader({ posts,selectedPost , selectedId}) {
  return (
    <div className={styles.headerContainer}>
      <div className={styles.headerList} >
      {posts.map((post) => (
        <div key={post.id} className={styles.postCard} onClick={() => {selectedPost(post.id);}}>
          <h3>{post.title}</h3>
          <h5>By:{post.author} <span>{post.date}</span></h5>
        </div>
      ))}
    </div>
    </div>
    
  );
}

export default BlogHeader;


